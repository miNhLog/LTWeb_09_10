
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<link rel="stylesheet" href="~/Content/css/style.css" />

<main>
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Đăng Ký Tài Khoản</h2>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <form method="post" action="@Url.Action("Register", "KhachHang")">
                <div class="form-group">
                    <label for="fullname">Họ và tên</label>
                    <input type="text" id="fullname" name="TenKH" required>
                </div>
                <div class="form-group">
                    <label for="location">Địa chỉ</label>
                    <input type="text" id="location" name="DiaChi" required>
                </div>
                <div class="form-group">
                    <label for="phone">Số điện thoại</label>
                    <input type="tel" id="phone" name="SoDienThoai" required>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" id="password" name="MatKhau" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Xác nhận mật khẩu</label>
                    <input type="password" id="confirmPassword" name="rePass" required>
                </div>
                <button type="submit" class="form-button">Đăng Ký</button>
            </form>
            <div class="form-footer">
                <p>Đã có tài khoản? <a href="@Url.Action("Login", "KhachHang")">Đăng nhập ngay</a></p>
            </div>
        </div>
    </div>
</main>


