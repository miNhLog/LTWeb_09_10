@model LTWeb10.Models.GioHang
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin giỏ hàng của bạn</h2>

@if (Model == null || Model.lst == null || Model.lst.Count == 0)
{
    <div class="alert alert-warning text-center" style="font-size:18px; padding: 15px; margin-top:20px;">
        🛒 Giỏ hàng của bạn hiện đang trống.
        <br />
        <a href="@Url.Action("Index", "Home")" class="btn btn-success" style="margin-top:10px;">
            → Tiếp tục mua hàng
        </a>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th colspan="2">Thao tác</th>
        </tr>

        @foreach (var item in Model.lst)
        {
            <tr>
                <td>@item.iMaSach</td>
                <td>@item.sTenSach</td>
                <td>
                    <img src="~/Content/Images/@item.sAnhBia" width="70" />
                </td>
                <td>@item.iSoLuong</td>
                <td>@item.dDonGia.ToString("N0") đ</td>
                <td>@item.ThanhTien.ToString("N0") đ</td>

                <td><a class="btn btn-info btn-sm" href="#">Chi tiết</a></td>
                <td><a class="btn btn-danger btn-sm" href="#">Xóa</a></td>
            </tr>
        }
    </table>

    <h3 class="text-right">
        Tổng tiền: <strong>@Model.TongThanhTien().ToString("N0") đ</strong>
    </h3>
    <a href="@Url.Action("DatHang","DatHang")" class="btn-order">
        Đặt hàng
    </a>



}
