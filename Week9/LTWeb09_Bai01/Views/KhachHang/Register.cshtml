@{
    Layout = null;
}
<link rel="stylesheet" href="~/Content/css/style.css" />

<div class="auth-wrapper">
    <div class="auth-box">
        <h2 class="auth-title">Đăng Ký</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" action="@Url.Action("Register","KhachHang")">

            <div class="form-group">
                <label>Họ tên</label>
                <input type="text" name="HoTen" required />
            </div>

            <div class="form-group">
                <label>Tên đăng nhập</label>
                <input type="text" name="TaiKhoan" required />
            </div>

            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="MatKhau" required />
            </div>

            <div class="form-group">
                <label>Nhập lại mật khẩu</label>
                <input type="password" name="rePass" required />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" name="Email" required />
            </div>

            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" name="DiaChi" required />
            </div>

            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" name="DienThoai" required />
            </div>

            <button type="submit" class="auth-button">Đăng Ký</button>
        </form>

        <div class="auth-footer">
            Đã có tài khoản? <a href="@Url.Action("Login","Home")">Đăng nhập ngay</a>
        </div>
    </div>
</div>
